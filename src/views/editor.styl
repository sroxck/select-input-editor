$editor = '.container'
$selector = '.select'
$box = '.box'
{$editor}
 --hy-padding 30px 200px
 --hy-margin 30px
 --hy-color gray
 --hy-child-padding 0 8px
 &-block
  --hy-margin 30px 0 0 0
 &-title
  --hy-margin 20px 0
  --hy-font 40px
  --hy-weight 800
{$selector}
  --hy-padding 5px
  --hy-radius 6px
  --hy-width 300px
  &-item
    --hy-padding 2px 10px

background(option)
  background option

outlineAndMarginBothPadding()
  outline none
  margin var(--hy-margin)
  padding var(--hy-child-padding)

{$box}
  --hy-display block
  position: relative
  &:focus-within .iconBox
    display var(--hy-display)
  &:hover .iconBox
    display var(--hy-display)
    
.el-button
  padding 0
  border none


.container-tip-button {
  color rgb(137, 136, 132)
  font-weight 500 !important
  margin-top 50px
}

.container-tip-button .button {
  border-radius 5px
  padding 4px 8px
  user-select none
  display inline-block
  cursor pointer
  width fit-content
  display flex
  align-items center
}
.container-tip-button .button:hover 
  color rgb(55, 53, 47)

  background-color rgba(55, 53, 47, 0.09)

.container-tip-button .button:hover svg 
  color rgb(55, 53, 47)

.action {
  top 3px !important
}

.iconBox {
  display none
  position absolute
  top -3px
  left -70px
}




.el-icon 
  padding 3px !important
  box-sizing border-box !important
  width 24px !important
  height 24px !important
  border-radius 5px

.el-icon:hover
  background-color rgba(55, 53, 47, 0.09)

{$editor}
  padding var(--hy-padding)
  margin-top var(--hy-margin)
  &-block
    outlineAndMarginBothPadding()
    &:before
      color var(--hy-color)
      content attr(data-placeholder)
  &-title
    outlineAndMarginBothPadding()
    font-size var(--hy-font)
    font-weight var(--hy-weight)
    &:before
      color var(--hy-color)
      content attr(data-placeholder)
      font-weight var(--hy-weight)
      -webkit-text-fill-color rgb(187, 186, 184)

{$selector}
  z-index 9999 !important
  position absolute
  border 1px solid #eee
  padding var(--hy-padding)
  overflow auto
  border-radius var(--hy-radius)
  box-shadow rgba(0, 0, 0, 0.09) 0px 3px 12px
  width  var(--hy-width)
  max-height 321px
  background #fff
  line-height 1.6
  &-item
    padding var(--hy-padding)
    border-radius var(--hy-radius)
    &:hover
      background-color rgba(55, 53, 47, 0.09)


.noHover:hover
  background(#fff !important)

.active
  background(rgba(55, 53, 47, 0.09))

.category {
  font-size 12px
}
